<div class="modal" id="messageBox" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" ng-controller="messageController">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Message</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body pl-2 pr-2">
                <div class="row p-0">
                    <div class="col-md-12">
                        <div class="form-group col-md-12 pl-0 pr-0">
                            <div ng-dropdown-multiselect="" options="users" selected-model="Message.members" checkboxes="true" extra-settings="userDropdownSetting" class="dropdown col-md-12"></div>
                        </div>
                        <div class="form-group col-md-12 pl-0 pr-0">
                            <textarea type="text" class="form-control col-md-12" placeholder="Ajenda" ng-model="Message.description"></textarea>
                        </div>
                        <div class="form-group col-md-12 pl-0 pr-0">
                            <input type="button" class="btn btn-block btn-primary col-md-12" value="Add" ng-click="addMessage()" />
                        </div>
                    </div>
                </div>
                <div class="row p-0">
                    <div class="col-md-12">
                        <table class="table table-striped table-responsive col-md-12">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>From</th>
                                    <th>To</th>
                                    <th>Discription</th>
                                    <th></th>
                                </tr>

                            </thead>
                            <tbody>
                                <tr ng-repeat="message in Messages">
                                    <td>{{message.date}}</td>
                                    <td>{{message.sendBy}}</td>
                                    <td>{{message.members | join:',':'label'}}</td>
                                    <td>{{message.description}}</td>
                                    <td><button class="btn glyphicon glyphicon-trash" ng-show="message.isOwner" ng-click="deleteMessage(message.messageId)" /></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>